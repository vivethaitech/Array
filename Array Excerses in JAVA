1.Merge two array in one array

public class MergeArray {
public static void main(String[] args) {
int[] a= {10,20,30};
int[] b= {40,50,60};
int j=0;
int[] c = new int[a.length + b.length];
for(int i=0;i<c.length;i++) {
if(i<a.length) {
c[i]=a[i];
}
else
{
c[i]=b[j];
j++;
}
}
System.out.print(Arrays.toString(c));	
}
}
