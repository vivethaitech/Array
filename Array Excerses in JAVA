6.find unique value in array

public class UniqueValue {
public static void main(String[] args) {
int[] array = {20,30,20,40,50,40,60};
for(int i=0;i<array.length;i++) {	
int count=0;
for(int j=0;j<array.length;j++) {
if(array[i]==array[j]) {
count++;
}
if(count==1)
{
System.out.print(array[i]+" ");
}
}		
}
}

