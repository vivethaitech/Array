public class MinValue {
public static void main(String[] args) {
int[] array = {20,30,20,40,50,40,60};
int min=Integer.MAX_VALUE;
for(int i=0;i<array.length;i++) {
if(min>array[i]) {
min=array[i];
}	
}
System.out.print("Minimum value is: "+min);
}
}
